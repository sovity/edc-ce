# This file is for unifying the coding style for different editors and IDEs
# See editorconfig.org
root = true

[*]
indent_style = space
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_size = 4

[*.ts]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
indent_size = 2

[*.{yml,yaml}]
indent_size = 2

[docker-compose.yaml]
indent_size = 2
